<% if params[:product_id] %>
    <h1>Create a new review for <%= @review.product.active_ingredient %> - <%= @review.product.chem_group.name %></h1>
<% else %>
    <h1>Create a review</h1>
<% end %>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@review) do |f| %>

    <div>
        <%= f.label :rating %><br>
        <%= f.number_field :rating, min:0, max:10 %><br>
    <div>
    <div>
        <%= f.label :title %><br>
        <%= f.text_area :title %><br>
    </div>
    <div>
        <%= f.label :content %><br>
        <%= f.text_area :content %><br>
    </div>
    <%= f.hidden_field :product_id %> <!-- makes association to product being reviewed. pre-populates. -->

    <%= f.submit "Post Review" %>

<% end %>